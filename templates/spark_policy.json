{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "S3Bucket",
      "Effect": "Allow",
      "Action": "s3:ListBucket",
      "Resource": [
        "arn:aws:s3:::tecton-${DEPLOYMENT_NAME}",
        "arn:aws:s3:::tecton.ai.public*",
        "arn:aws:s3:::tecton-materialization-release"
      ]
    },
    {
      "Sid": "TectonPublicS3",
      "Effect": "Allow",
      "Action": ["s3:GetObject"],
      "Resource": [
        "arn:aws:s3:::tecton.ai.public*",
        "arn:aws:s3:::tecton-materialization-release/*"
      ]
    },
    {
      "Action": "sts:AssumeRole",
      "Effect": "Allow",
      "Resource": ["{MATERIALIZED_DATA_CROSS_ACCOUNT_ROLE_ARN}"],
      "Sid": "CrossAccountAccess"
    }
  ]
}
