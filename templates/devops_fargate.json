{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Sid": "FargateAttachRole",
            "Effect": "Allow",
            "Action": [
                "iam:PassRole",
                "iam:AttachRolePolicy",
                "iam:DescribeRole",
                "iam:DetachRolePolicy",
                "iam:DeleteRolePolicy"
            ],
            "Resource": ${FARGATE_ROLES},
            "Condition": {
                "StringEquals": {
                    "iam:PolicyARN": ${FARGATE_POLICY_ARNS}
                }
            }
        },
        {
            "Sid": "CreateFargateRole",
            "Effect": "Allow",
            "Action": [
                "iam:PassRole",
                "iam:CreateRole",
                "iam:DescribeRole",
                "iam:TagRole",
                "iam:DeleteRole",
                "iam:UpdateAssumeRolePolicy"
            ],
            "Resource": ${FARGATE_ROLES}
        },
        {
            "Sid": "FargateListRole",
            "Effect": "Allow",
            "Action": [
                "iam:ListRolePolicies"
            ],
            "Resource": [
                "arn:aws:iam::${ACCOUNT_ID}:role/tecton-*",
                "arn:aws:iam::${ACCOUNT_ID}:role/${DEPLOYMENT_NAME}-*"
            ]
        },
        {
            "Sid": "KinesisStream",
            "Effect": "Allow",
            "Action": [
                "firehose:CreateDeliveryStream",
                "firehose:UpdateDestination",
                "firehose:DeleteDeliveryStream",
                "firehose:ListTagsForDeliveryStream",
                "firehose:DescribeDeliveryStream",
                "firehose:ListDeliveryStreams"
            ],
            "Resource": [
                "arn:aws:firehose:*:${ACCOUNT_ID}:deliverystream/tecton-${DEPLOYMENT_NAME}-fargate-log-delivery-stream*",
                "arn:aws:firehose:*:${ACCOUNT_ID}:deliverystream/tecton-${DEPLOYMENT_NAME}-*-fargate-log-delivery-stream*"
            ]
        },
        {
            "Sid": "FargateProfile",
            "Effect": "Allow",
            "Action": [
                "eks:CreateFargateProfile",
                "eks:DescribeFargateProfile",
                "eks:DeleteFargateProfile",
                "eks:TagResource"
            ],
            "Resource": [
                "arn:aws:eks:*:${ACCOUNT_ID}:cluster/tecton-${DEPLOYMENT_NAME}*",
                "arn:aws:eks:*:${ACCOUNT_ID}:cluster/${DEPLOYMENT_NAME}*",
                "arn:aws:eks:*:${ACCOUNT_ID}:fargateprofile/tecton-${DEPLOYMENT_NAME}*",
                "arn:aws:eks:*:${ACCOUNT_ID}:fargateprofile/${DEPLOYMENT_NAME}*"
            ]
        },
        {
            "Sid": "CreateGetTagOIDCProvider",
            "Effect": "Allow",
            "Action": [
                "iam:CreateOpenIDConnectProvider",
                "iam:GetOpenIDConnectProvider",
                "iam:TagOpenIDConnectProvider"
            ],
            "Resource": [
                "arn:aws:iam::${ACCOUNT_ID}:oidc-provider/*"
            ]
        },
        {
            "Sid": "ListDeleteOIDCProvider",
            "Effect": "Allow",
            "Action": [
                "iam:ListOpenIDConnectProviders",
                "iam:DeleteOpenIDConnectProvider"
            ],
            "Resource": [
                "arn:aws:iam::${ACCOUNT_ID}:oidc-provider/*"
            ],
            "Condition": {"StringEquals": {"aws:ResourceTag/tecton-owned": "true"}}
        },
        {
            "Sid": "EksFargateNodePolicyPolicies",
            "Effect": "Allow",
            "Action": [
                "iam:ListPolicies",
                "iam:DescribePolicies"
            ],
            "Resource": [
                "arn:aws:iam::${ACCOUNT_ID}:policy/*"
            ]
        }
    ]
}
