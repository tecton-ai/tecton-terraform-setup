{
    "Version": "2012-10-17",
    "Statement": [
      {
        "Sid": "S3LogPermissions",
        "Effect": "Allow",
        "Action": [
            "s3:PutObject",
            "s3:PutObjectAcl"
        ],
        "Resource": [
            "arn:aws:s3:::tecton-logs-aggregation/tecton-${DEPLOYMENT_NAME}*",
            "arn:aws:s3:::tecton-logs-aggregation/tecton-${DEPLOYMENT_NAME}/*"
        ]
      },
      {
        "Sid": "EksFargateAsg",
        "Effect": "Allow",
        "Action": [
            "autoscaling:DescribeAutoScalingGroups",
            "autoscaling:SetInstanceHealth",
            "ec2:DescribeInstances"
        ],
        "Resource": [
          "arn:aws:autoscaling:*:${ACCOUNT_ID}:autoScalingGroup:*:autoScalingGroupName/tecton*"
        ]
      },
      {
        "Sid": "EksFargatePassRole",
        "Effect": "Allow",
        "Action": [
            "iam:GetRole",
            "iam:PassRole"
        ],
        "Resource": [
          "arn:aws:iam::${ACCOUNT_ID}:role/tecton-*"
        ]
      }
    ]
}