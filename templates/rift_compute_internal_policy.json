{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Effect": "Allow",
      "Action": [
        "secretsmanager:*"
      ],
      "Resource": ["*"],
      "Condition": {
        "StringEquals": {
          "aws:ResourceAccount": "${ACCOUNT_ID}"
        }
      }
    },
    {
      "Effect": "Allow",
      "Action": [
        "kms:*"
      ],
      "Resource": ["*"],
      "Condition": {
        "StringEquals": {
          "aws:ResourceAccount": "${ACCOUNT_ID}"
        }
      }
    }
  ]
} 