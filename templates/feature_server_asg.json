{
    "Version": "2012-10-17",
    "Statement": [
          {
            "Sid": "TectonEKSTargetGroup",
            "Effect": "Allow",
            "Action": [
                "elasticloadbalancing:CreateTargetGroup",
                "elasticloadbalancing:AddTags",
                "elasticloadbalancing:ModifyTargetGroupAttributes",
                "elasticloadbalancing:DeleteTargetGroup",
                "elasticloadbalancing:DeleteRule"
            ],
            "Resource": [
                "arn:aws:elasticloadbalancing:*:${ACCOUNT_ID}:targetgroup/tecton-*",
                "arn:aws:elasticloadbalancing:*:${ACCOUNT_ID}:targetgroup/tecton-${DEPLOYMENT_NAME}*",
                "arn:aws:elasticloadbalancing:*:${ACCOUNT_ID}:targetgroup/${DEPLOYMENT_NAME_CONCAT}*"
            ]
          },
          {
            "Sid": "ElasticacheClusterCreation",
            "Effect": "Allow",
            "Action": [
                "elasticache:CreateReplicationGroup",
                "elasticache:DeleteReplicationGroup",
                "elasticache:DescribeReplicationGroups",
                "elasticache:ModifyReplicationGroup",
                "elasticache:ModifyReplicationGroupShardConfiguration",

                "elasticache:CreateServerlessCache",
                "elasticache:DeleteServerlessCache",
                "elasticache:DescribeServerlessCaches",
                "elasticache:ModifyServerlessCache",

                "elasticache:DescribeCacheSubnetGroups",
                "elasticache:DescribeEvents",
                "elasticache:ListTagsForResource"
            ],
            "Resource": [
                "arn:aws:elasticache:${REGION}:${ACCOUNT_ID}:subnetgroup:*",
                "arn:aws:elasticache:${REGION}:${ACCOUNT_ID}:replicationgroup:*",
                "arn:aws:elasticache:${REGION}:${ACCOUNT_ID}:parametergroup:*",
                "arn:aws:elasticache:${REGION}:${ACCOUNT_ID}:cluster:*"
            ]
        },
        {
            "Sid": "ListenerRuleMgmt",
            "Effect": "Allow",
            "Action": [
               "elasticloadbalancing:CreateRule",
               "elasticloadbalancing:AddTags"
            ],
            "Resource": [
                "arn:aws:elasticloadbalancing:*:${ACCOUNT_ID}:listener-rule/*",
                "arn:aws:elasticloadbalancing:*:${ACCOUNT_ID}:listener/*"
            ]
        },
        {
            "Sid": "ElasticacheCreateServiceLinkedRole",
            "Effect": "Allow",
            "Action": [
                "iam:CreateServiceLinkedRole",
                "iam:PutRolePolicy"
            ],
            "Resource": "arn:aws:iam::*:role/aws-service-role/elasticache.amazonaws.com/AWSServiceRoleForElastiCache*",
            "Condition": {"StringLike": {"iam:AWSServiceName": "elasticache.amazonaws.com"}}
        },
        {
            "Sid": "FsgEc2Access",
            "Effect": "Allow",
            "Action": [
                "autoscaling:CreateAutoScalingGroup",
                "autoscaling:DescribeAutoScalingGroups",
                "autoscaling:UpdateAutoScalingGroup",
                "autoscaling:DeleteAutoScalingGroup",
                "autoscaling:StartInstanceRefresh",
                "autoscaling:DescribeInstanceRefreshes",

                "autoscaling:PutScalingPolicy",
                "autoscaling:DescribeScalingPolicies",
                "autoscaling:DeletePolicy",

                "autoscaling:EnableMetricsCollection",

                "ec2:CreateLaunchTemplate",
                "ec2:DescribeLaunchTemplates",
                "ec2:DeleteLaunchTemplate",

                "ec2:CreateLaunchTemplateVersion",
                "ec2:DescribeLaunchTemplateVersions",
                "ec2:DeleteLaunchTemplateVersions",


                "ec2:DescribeInstances",
                "ec2:RunInstances",
            ],
            "Resource": ["*"]
          },
          {
            "Sid": "FsgEc2LaunchTemplate",
            "Effect": "Allow",
            "Action": [
                "ec2:CreateTags"
            ],
            "Resource": [
                "arn:aws:ec2:*:${ACCOUNT_ID}:launch-template/*"
            ]
          },
          {
            "Sid": "RoleManagement",
            "Effect": "Allow",
            "Action": [
               "iam:GetRole",
               "iam:PassRole"
            ],
            "Resource": "arn:aws:iam::${ACCOUNT_ID}:role/tecton-*"
          },
          {
            "Sid": "DescribeNetworkResources",
            "Effect": "Allow",
            "Action": [
                "ec2:CreateTags"
            ],
            "Resource": "*"
        }
    ]
}