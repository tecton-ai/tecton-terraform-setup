{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "S3Bucket",
      "Effect": "Allow",
      "Action": "s3:ListBucket",
      "Resource": [
        "arn:aws:s3:::tecton-${DEPLOYMENT_NAME}",
        "arn:aws:s3:::tecton.ai.public*",
        "arn:aws:s3:::tecton-materialization-release"
      ]
    },
    {
      "Action": ["s3:GetObject", "s3:PutObject", "s3:DeleteObject"],
      "Effect": "Allow",
      "Resource": ["arn:aws:s3:::tecton-${DEPLOYMENT_NAME}/*"],
      "Sid": "S3Object"
    },
    {
      "Sid": "TectonPublicS3",
      "Effect": "Allow",
      "Action": ["s3:GetObject"],
      "Resource": [
        "arn:aws:s3:::tecton.ai.public*",
        "arn:aws:s3:::tecton-materialization-release/*"
      ]
    }
  ]
}
